<?xml version="1.0"?>

<launch>

  <node pkg="rviz" type="rviz" name="rviz"
    args="-d $(find laser_mapping)/../../rviz_cfg/demo.rviz"/>

  <node pkg="laser_mapping" type="key_motion" name="key_motion" launch-prefix="xterm -e"/>

  <arg name="geotiff_map_file_path" default="$(find hector_geotiff)/maps"/>

  <param name="/use_sim_time" value="true"/>

  <include file="$(find hector_mapping)/launch/mapping_default.launch">
    <arg name="scan_topic" default="vrep/scan"/>
    <arg name="pub_map_odom_transform" default="false"/>
    <arg name="base_frame" default="base_link"/>
    <param name="odom_frame" value="base_link" />
  </include>

  <include file="$(find hector_geotiff)/launch/geotiff_mapper.launch">
    <arg name="trajectory_source_frame_name" value="scanmatcher_frame"/>
    <arg name="map_file_path" value="$(arg geotiff_map_file_path)"/>
  </include>

  <include file="$(find image_localization)/launch/image_localization.launch" />

  <include file="$(find visual_servoing)/launch/visual_servoing.launch" />


</launch>
